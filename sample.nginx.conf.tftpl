user www-data;
worker_process auto;
pid /run/nginx.id;

events {
    worker_connections 768;
}

http {
    access_log /var/log/nginx/access.log;
    error_log /var/log/nginx/error.log;
    
    gzip on;

    upstream apps {
        least_conn;
        %{~ for p in ports ~}
        server ${docker_host}:${p}; 
        %{~ endfor ~}
    }
    server {
        listen: 80;
        location / {
            proxy_pass http://apps;
        }
    }
}